<?xml
    version="1.0"
    encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/back_ground"
    android:orientation="vertical"
    tools:context=".ui.auth.NewPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="1200dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/app_logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_password"
            android:textColor="#FFF"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="25sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textColor="#FFF"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:lines="3"
            android:gravity="center"
            android:layout_marginTop="25dp"
            />

        <EditText
            android:id="@+id/newpassword_edittext"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            android:textColorHint="@color/greenbeautiful"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingTop="15dp"
            android:textSize="14sp"
            android:paddingBottom="15dp"
            android:layout_marginTop="25dp"
            android:inputType="textPassword"
            android:background="@drawable/edittext_background"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>

        <EditText
            android:id="@+id/confirmnewpassword_edtittext"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/confirm_password_hint"
            android:textColorHint="@color/greenbeautiful"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingTop="15dp"
            android:textSize="14sp"
            android:paddingBottom="15dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:background="@drawable/edittext_background"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>

        <TextView
            android:id="@+id/submitnewpassword_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_btn"
            android:text="@string/reset_password"
            android:textSize="16sp"
            android:textColor="#fff"
            android:inputType="text"
            android:gravity="center"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:padding="8dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="6dp"
            />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/newpassword_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>