<?xml
    version="1.0"
    encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:background="?selectableItemBackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/itemcart_layout"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:background="@drawable/subcategory_background"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/itemcart_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_launcher"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:paddingTop="2dp"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:background="#10403D"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp">

            <TextView
                android:id="@+id/itemcart_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="T shirt"
                android:textColor="#FFF"
                android:layout_marginStart="8dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/itemcart_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="60$"
                android:layout_marginStart="8dp"
                android:gravity="start"
                android:textColor="#34B4AB"
                android:textSize="12sp" />

        </LinearLayout>

        </ScrollView>

    </RelativeLayout>
    
</androidx.cardview.widget.CardView>